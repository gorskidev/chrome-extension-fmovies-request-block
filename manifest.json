{
    "name": "FMovies - Outgoing request blocker",
    "version": "1.0",
    "description": "Block outgoing requests.",
    "permissions": [
        "storage",
        "declarativeContent",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
